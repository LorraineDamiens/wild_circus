{% extends 'backoffice.layout.html.twig' %}

{% block title %}Artist index{% endblock %}

{% block body %}
    <h1 class="text-center my-3">Liste des artistes</h1>
        <div class="row justify-content-center">
            <div class="card col-7">

                <table class="table table-hover">
                    <thead>
                        <tr>
                            <th scope="col">Id</th>
                            <th scope="col">Pr√©nom</th>
                            <th scope="col">Nom</th>
                            <th scope="col">actions</th>
                        </tr>
                    </thead>
                    <tbody>
                    {% for artist in artists %}
                        <tr>
                            <td>{{ artist.id }}</td>
                            <td>{{ artist.Firstname }}</td>
                            <td>{{ artist.Lastname }}</td>
                            <td>
                                <a href="{{ path('artist_show', {'id': artist.id}) }}">voir</a>
                                <a href="{{ path('artist_edit', {'id': artist.id}) }}">modifier</a>
                            </td>
                        </tr>
                    {% else %}
                        <tr>
                            <td colspan="4">no records found</td>
                        </tr>
                    {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
<div class="row justify-content-center">
    <a href="{{ path('artist_new') }}"> <button class="btn btn-primary my-3">Ajouter nouvel artiste</button></a>
</div>
{% endblock %}
