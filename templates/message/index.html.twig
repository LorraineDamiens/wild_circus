{% extends 'backoffice.layout.html.twig' %}


{% block title %}Message index{% endblock %}

{% block body %}
    <h1>Liste des messages</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Email</th>
                <th>Message</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for message in messages %}
            <tr>
                <td>{{ message.id }}</td>
                <td>{{ message.email }}</td>
                <td>{{ message.message }}</td>
                <td>
                    <a href="{{ path('message_show', {'id': message.id}) }}">voir</a>
                    <a href="{{ path('message_edit', {'id': message.id}) }}">modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}
